@using HayvanBarinagiCalisma.Resources
@inject LocService SharedLocalizer
@{
    ViewData["Tercih"] = SharedLocalizer.GetLocalizedHtmlString("Tercih");
    ViewData["TercihIcerik"] = SharedLocalizer.GetLocalizedHtmlString("TercihIcerik");

    ViewData["Vizyon"] = SharedLocalizer.GetLocalizedHtmlString("Vizyon");
    ViewData["VizyonIcerik"] = SharedLocalizer.GetLocalizedHtmlString("VizyonIcerik");

    ViewData["Misyon"] = SharedLocalizer.GetLocalizedHtmlString("Misyon");
    ViewData["MisyonIcerik"] = SharedLocalizer.GetLocalizedHtmlString("MisyonIcerik");

    ViewData["Slider1"] = SharedLocalizer.GetLocalizedHtmlString("Slider1");
    ViewData["Slider2"] = SharedLocalizer.GetLocalizedHtmlString("Slider2");
    ViewData["Slider3"] = SharedLocalizer.GetLocalizedHtmlString("Slider3");

    ViewData["Slider1Icerik"] = SharedLocalizer.GetLocalizedHtmlString("Slider1Icerik");
    ViewData["Slider2Icerik"] = SharedLocalizer.GetLocalizedHtmlString("Slider2Icerik");
    ViewData["Slider3Icerik"] = SharedLocalizer.GetLocalizedHtmlString("Slider3Icerik");

}
@{
    ViewData["Title"] = "Anasayfa";
}

<div id="carouselExampleIndicators" class="carousel slide w-75 m-auto shadow rounded" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/14.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@ViewData["Slider1"]</h5>
                <p>@ViewData["Slider1Icerik"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/12.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@ViewData["Slider2"]</h5>
                <p>@ViewData["Slider2cerik"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/13.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@ViewData["Slider3"]</h5>
                <p>@ViewData["Slider3Icerik"]</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row mt-4 mb-3">

    <div class="col-md-4 p-1">
        <div class="card text-white bg-dark shadow" style="max-width: 18rem;">
            <div class="card-header">@ViewData["Tercih"]</div>
            <div class="card-body">
                @*<h5 class="card-title">Primary card title</h5>*@
                <p class="card-text">
                    @ViewData["TercihIcerik"]
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 p-1">
        <div class="card bg-light shadow" style="max-width: 18rem;">
            <div class="card-header">@ViewData["Vizyon"]</div>
            <div class="card-body">
                @*<h5 class="card-title">Primary card title</h5>*@
                <p class="card-text">
                    @ViewData["VizyonIcerik"]
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 p-1">
        <div class="card text-white bg-dark shadow" style="max-width: 18rem;">
            <div class="card-header">@ViewData["Misyon"]</div>
            <div class="card-body">
                @*<h5 class="card-title">Primary card title</h5>*@
                <p class="card-text">
                    @ViewData["MisyonIcerik"]
                </p>
            </div>
        </div>
    </div>
</div>

