@{
    ViewData["Title"] = "Hakkımızda";
}
@using HayvanBarinagiCalisma.Resources
@inject LocService SharedLocalizer
@{ 
    ViewData["BizKimiz"] = SharedLocalizer.GetLocalizedHtmlString("BizKimiz");
    ViewData["HakkimizdaIcerik1"] = SharedLocalizer.GetLocalizedHtmlString("HakkimizdaIcerik1");
    ViewData["HakkimizdaIcerik2"] = SharedLocalizer.GetLocalizedHtmlString("HakkimizdaIcerik2");
    ViewData["KayitOl"] = SharedLocalizer.GetLocalizedHtmlString("KayitOl");
    ViewData["RezerveEt"] = SharedLocalizer.GetLocalizedHtmlString("RezerveEt");
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager
<div class="jumbotron mt-5 shadow">
    <h1 class="display-4">@ViewData["BizKimiz"]?</h1>
    <p class="lead"> @ViewData["HakkimizdaIcerik1"]
       
    </p>
    <hr class="my-4">
    <p>@ViewData["HakkimizdaIcerik2"]</p>
    <p class="lead">
        @if (!SignInManager.IsSignedIn(User))    //Kullanıcı Giriş yaptı ise
        {
        <a class="btn btn-outline-dark btn-lg float-right" asp-area="Identity" asp-page="/Account/Register" role="button">@ViewData["KayitOl"]...</a>
        }
        else
        {
            <a class="btn btn-outline-dark btn-lg float-right" asp-controller="Home" asp-action="Rezerve" role="button">@ViewData["RezerveEt"]...</a>
        }

    </p>
</div>