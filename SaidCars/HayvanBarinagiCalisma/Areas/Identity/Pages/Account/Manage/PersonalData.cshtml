@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Kişisel Veriler";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        @*<p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>*@
        <p>Hesabınız bize vermiş olduğunuz bilgileri içerir. Bu sayfada bilgilerinizi indirebilir ya da silebilirsiniz.</p>
        <p>
            @*<strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>*@
            <strong>Verileri silerseniz hesabınız da silinecektir.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">İndir</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Sil</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}